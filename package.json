{
    "name": "production-server",
    "version": "1.0.0",
    "description": "production-server",
    "author": "Adrian Pietrzak <contact@pietrzakadrian.com>",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start:hmr": "node dist/main",
        "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
        "migration:generate": "ts-node node_modules/typeorm/cli.js migration:generate -f ormconfig -d src/migrations -n",
        "migration:revert": "ts-node node_modules/typeorm/cli.js migration:revert -f ormconfig",
        "watch:dev": "nodemon --config nodemon.json",
        "debug:dev": "nodemon --config nodemon-debug.json",
        "webpack": "webpack --config webpack.config.js --progress",
        "migration:create": "ts-node node_modules/typeorm/cli.js migration:create -f ormconfig -d src/migrations -n",
        "schema:drop": "ts-node node_modules/typeorm/cli.js schema:drop -f ormconfig",
        "start:prod": "node dist/main.js",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint --fix . --ext .ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "docs:dev": "vuepress dev -p 7070",
        "docs:build": "DEPLOY_ENV=gh-pages vuepress build",
        "docs:deploy": "yarn docs:build && gh-pages -d .vuepress/dist"
    },
    "dependencies": {
        "@nestjs/common": "^6.10.8",
        "@nestjs/core": "^6.10.8",
        "@nestjs/jwt": "^6.1.1",
        "@nestjs/microservices": "^6.10.8",
        "@nestjs/passport": "^6.1.1",
        "@nestjs/platform-express": "^6.10.8",
        "@nestjs/swagger": "^4.0.9",
        "@nestjs/typeorm": "^6.2.0",
        "aws-sdk": "~2.585.0",
        "bcrypt": "~3.0.7",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.0",
        "compression": "~1.7.4",
        "dotenv": "~8.2.0",
        "express": "~4.17.1",
        "express-rate-limit": "~5.0.0",
        "file-type": "~12.4.0",
        "helmet": "~3.21.2",
        "jsonwebtoken": "~8.5.1",
        "lodash": "^4.17.15",
        "mime-types": "~2.1.25",
        "morgan": "~1.9.1",
        "passport": "~0.4.0",
        "passport-jwt": "^4.0.0",
        "pg": "^7.14.0",
        "reflect-metadata": "~0.1.13",
        "request-context": "~2.0.0",
        "rxjs": "^6.5.3",
        "source-map-support": "^0.5.16",
        "swagger-ui-express": "^4.1.2",
        "typeorm": "^0.2.21",
        "typeorm-transactional-cls-hooked": "^0.1.10",
        "typescript": "^3.7.3",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@nestjs/testing": "^6.10.8",
        "@types/bcrypt": "^3.0.0",
        "@types/compression": "^1.0.1",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.2",
        "@types/express-rate-limit": "^3.3.3",
        "@types/file-type": "^10.9.1",
        "@types/helmet": "^0.0.45",
        "@types/jest": "^24.0.23",
        "@types/jsonwebtoken": "^8.3.5",
        "@types/lodash": "^4.14.149",
        "@types/mime-types": "^2.1.0",
        "@types/morgan": "^1.7.37",
        "@types/node": "^12.12.14",
        "@types/passport-jwt": "^3.0.3",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^3.4.6",
        "@typescript-eslint/eslint-plugin": "^2.10.0",
        "@typescript-eslint/eslint-plugin-tslint": "^2.10.0",
        "@typescript-eslint/parser": "^2.10.0",
        "clean-webpack-plugin": "^3.0.0",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-import-helpers": "^1.0.2",
        "eslint-plugin-prettier": "^3.1.1",
        "gh-pages": "^2.1.1",
        "husky": "^3.1.0",
        "jest": "^24.9.0",
        "lint-staged": "~9.5.0",
        "nodemon": "^2.0.1",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "^24.2.0",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.5.4",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "~1.18.0",
        "tslint-consistent-codestyle": "^1.16.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-plugin-prettier": "^2.0.1",
        "vuepress": "^1.2.0",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "webpack-node-externals": "^1.7.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "git add"
        ]
    }
}
